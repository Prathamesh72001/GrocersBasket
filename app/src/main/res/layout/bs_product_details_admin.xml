<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
   >

    <RelativeLayout
        android:id="@+id/toolbarRl"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:background="@drawable/content_bg"
        android:padding="15dp">

        <ImageView
            android:id="@+id/backbtn"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:padding="2.5dp"
            android:src="@drawable/previous"
            app:tint="@color/black" />

        <ImageView
            android:id="@+id/deletebtn"
            android:layout_width="28dp"
            android:layout_height="28dp"
            android:layout_alignParentRight="true"
            android:src="@drawable/delete"
            app:tint="@color/black" />

        <ImageView
            android:id="@+id/editbtn"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_marginRight="10dp"
            android:layout_toLeftOf="@id/deletebtn"
            android:src="@drawable/edit_ic"
            app:tint="@color/black" />

        <TextView
            android:id="@+id/prodname"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:fontFamily="@font/bungee"
            android:text="Product Name"
            android:textColor="@color/black"
            android:textSize="17.5sp" />
    </RelativeLayout>

    <ImageView
        android:id="@+id/prodimage"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:layout_below="@id/toolbarRl"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="-35dp"
        android:adjustViewBounds="true"
        android:background="@drawable/content_bg"
        android:padding="5dp"
        android:src="@drawable/default_image" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/prodimage"
        android:layout_marginTop="10dp"
        android:background="@color/white"
        android:orientation="vertical"
        android:padding="10dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/det_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/baloo"
                android:text="Name : "
                android:textColor="@color/black"
                android:textSize="13sp" />

            <TextView
                android:id="@+id/productname"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_toRightOf="@id/det_name"
                android:fontFamily="@font/baloo"
                android:text="Name"
                android:textColor="@color/grey"
                android:textSize="13sp" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/det_desc"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/baloo"
                android:text="Description : "
                android:textColor="@color/black"
                android:textSize="13sp" />

            <TextView
                android:id="@+id/productdesc"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_toRightOf="@id/det_desc"
                android:fontFamily="@font/baloo"
                android:text="Description"
                android:textColor="@color/grey"
                android:textSize="13sp" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/det_desc_detailed"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/baloo"
                android:text="Description (Detailed) : "
                android:textColor="@color/black"
                android:textSize="13sp" />

            <TextView
                android:id="@+id/productdescdetailed"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_toRightOf="@id/det_desc_detailed"
                android:fontFamily="@font/baloo"
                android:text="Description"
                android:textColor="@color/grey"
                android:textSize="13sp" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/det_quan"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/baloo"
                android:text="Quantity : "
                android:textColor="@color/black"
                android:textSize="13sp" />

            <TextView
                android:id="@+id/productquan"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_toRightOf="@id/det_quan"
                android:fontFamily="@font/baloo"
                android:text="Quantity"
                android:textColor="@color/grey"
                android:textSize="13sp" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/det_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/baloo"
                android:text="Price : "
                android:textColor="@color/black"
                android:textSize="13sp" />

            <TextView
                android:id="@+id/productprice"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_toRightOf="@id/det_price"
                android:fontFamily="@font/baloo"
                android:text="Price"
                android:textColor="@color/grey"
                android:textSize="13sp" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/DiscountRl"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/det_disc"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/baloo"
                android:text="Discount : "
                android:textColor="@color/black"
                android:textSize="13sp" />

            <TextView
                android:id="@+id/productdisc"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_toRightOf="@id/det_disc"
                android:fontFamily="@font/baloo"
                android:text="Discount"
                android:textColor="@color/grey"
                android:textSize="13sp" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/DiscountPriceRl"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/det_discprice"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/baloo"
                android:text="Discount Price : "
                android:textColor="@color/black"
                android:textSize="13sp" />

            <TextView
                android:id="@+id/productdiscprice"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_toRightOf="@id/det_discprice"
                android:fontFamily="@font/baloo"
                android:text="Discount Price"
                android:textColor="@color/grey"
                android:textSize="13sp" />
        </RelativeLayout>

    </LinearLayout>

</RelativeLayout>