<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Categories"
    android:id="@+id/drawerlayout">

    <com.google.android.material.navigation.NavigationView
        android:id="@+id/navigation_view"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        android:layout_marginLeft="25dp"
        android:background="@color/white"
        android:theme="@style/navigationTheme"
        app:headerLayout="@layout/menu_header"
        app:menu="@menu/main_menu" />

    <RelativeLayout
        android:id="@+id/contentView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        android:orientation="vertical"
        >

        <RelativeLayout
            android:id="@+id/top"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/content_bg"
            android:padding="15dp">

            <ImageView
                android:id="@+id/menu"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_centerVertical="true"
                android:contentDescription="TODO"
                android:src="@drawable/menu"
                app:tint="@color/black" />



            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:fontFamily="@font/baloo"
                android:text="Shop by Category"
                android:textAllCaps="true"
                android:textColor="@color/black"
                android:textSize="17.5sp" />

            <ImageView
                android:id="@+id/Search"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:src="@drawable/ic_baseline_search_24"
                app:tint="@color/black" />
        </RelativeLayout>

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scrollbars="none"
            android:layout_below="@id/top"
            >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                >


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="25dp"
                    android:fontFamily="@font/bungee"
                    android:text="Categories"
                    android:textColor="@color/black"
                    android:textSize="25sp" />

                <RelativeLayout
                    android:id="@+id/friuts"
                    android:layout_width="match_parent"
                    android:layout_height="200dp">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="150dp"
                        android:layout_margin="25dp"
                        android:background="@drawable/categories_bg_1">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:fontFamily="@font/baloo"
                            android:padding="30dp"
                            android:text="Fruits \u0026\nVegetables"
                            android:textAlignment="center"
                            android:lineSpacingExtra="-10sp"
                            android:textColor="@color/white"
                            android:textSize="20sp" />


                    </RelativeLayout>

                    <ImageView
                        android:layout_width="180dp"
                        android:layout_height="150dp"
                        android:layout_alignParentRight="true"
                        android:layout_marginRight="15dp"
                        android:src="@drawable/vegetables" />
                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/foodgrains"
                    android:layout_width="match_parent"
                    android:layout_height="200dp">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="150dp"
                        android:layout_margin="25dp"
                        android:background="@drawable/categories_bg_2">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentRight="true"
                            android:layout_centerVertical="true"
                            android:fontFamily="@font/baloo"
                            android:padding="30dp"
                            android:textAlignment="center"
                            android:lineSpacingExtra="-10sp"
                            android:text="Foodgrain, Oil \u0026\nMasala"
                            android:textColor="@color/white"
                            android:textSize="20sp" />


                    </RelativeLayout>

                    <ImageView
                        android:layout_width="150dp"
                        android:layout_height="125dp"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="25dp"
                        android:src="@drawable/chilipepper" />
                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/cleaning"
                    android:layout_width="match_parent"
                    android:layout_height="200dp">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="150dp"
                        android:layout_margin="25dp"
                        android:background="@drawable/categories_bg_1">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:fontFamily="@font/baloo"
                            android:padding="30dp"
                            android:textAlignment="center"
                            android:lineSpacingExtra="-10sp"
                            android:text="Cleaning \u0026\nHousehold"
                            android:textColor="@color/white"
                            android:textSize="20sp" />


                    </RelativeLayout>

                    <ImageView
                        android:layout_width="180dp"
                        android:layout_height="150dp"
                        android:layout_alignParentRight="true"
                        android:layout_marginRight="15dp"
                        android:src="@drawable/desinfectant" />
                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/beauty"
                    android:layout_width="match_parent"
                    android:layout_height="200dp">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="150dp"
                        android:layout_margin="25dp"
                        android:background="@drawable/categories_bg_2">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentRight="true"
                            android:layout_centerVertical="true"
                            android:fontFamily="@font/baloo"
                            android:padding="30dp"
                            android:textAlignment="center"
                            android:lineSpacingExtra="-10sp"
                            android:text="Beauty \u0026\nHygiene"
                            android:textColor="@color/white"
                            android:textSize="20sp" />


                    </RelativeLayout>

                    <ImageView
                        android:layout_width="150dp"
                        android:layout_height="125dp"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="25dp"
                        android:src="@drawable/makeup" />
                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/snacks"
                    android:layout_width="match_parent"
                    android:layout_height="200dp">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="150dp"
                        android:layout_margin="25dp"
                        android:background="@drawable/categories_bg_1">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:fontFamily="@font/baloo"
                            android:padding="30dp"
                            android:text="Snacks \u0026\nBranded Foods"
                            android:textAlignment="center"
                            android:lineSpacingExtra="-10sp"
                            android:textColor="@color/white"
                            android:textSize="20sp" />


                    </RelativeLayout>

                    <ImageView
                        android:layout_width="180dp"
                        android:layout_height="150dp"
                        android:layout_alignParentRight="true"
                        android:layout_marginTop="-10dp"
                        android:layout_marginRight="15dp"
                        android:src="@drawable/snack" />
                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/bakery"
                    android:layout_width="match_parent"
                    android:layout_height="200dp">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="150dp"
                        android:layout_margin="25dp"
                        android:background="@drawable/categories_bg_2">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentRight="true"
                            android:layout_centerVertical="true"
                            android:fontFamily="@font/baloo"
                            android:padding="30dp"
                            android:textAlignment="center"
                            android:lineSpacingExtra="-10sp"
                            android:text="Bakery, Cakes \u0026\nDairy"
                            android:textColor="@color/white"
                            android:textSize="20sp" />


                    </RelativeLayout>

                    <ImageView
                        android:layout_width="150dp"
                        android:layout_height="125dp"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="25dp"
                        android:src="@drawable/cupcakes" />
                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/bev"
                    android:layout_width="match_parent"
                    android:layout_height="200dp"
                    android:layout_marginBottom="60dp">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="150dp"
                        android:layout_margin="25dp"
                        android:background="@drawable/categories_bg_1">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:fontFamily="@font/baloo"
                            android:padding="30dp"
                            android:textAlignment="center"
                            android:lineSpacingExtra="-10sp"
                            android:text="Beverages \u0026\nJuices"
                            android:textColor="@color/white"
                            android:textSize="20sp" />


                    </RelativeLayout>

                    <ImageView
                        android:layout_width="180dp"
                        android:layout_height="150dp"
                        android:layout_alignParentRight="true"
                        android:layout_marginRight="15dp"
                        android:src="@drawable/drink" />
                </RelativeLayout>


            </LinearLayout>
        </ScrollView>

        <com.google.android.material.bottomnavigation.BottomNavigationView
            android:id="@+id/bottom_nav"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:background="?android:attr/windowBackground"
            android:theme="@style/navigationTheme"
            app:layout_behavior="@string/hide_bottom_view_on_scroll_behavior"
            app:menu="@menu/bottom_nav_menu"
            app:labelVisibilityMode="unlabeled"/>

    </RelativeLayout>

</androidx.drawerlayout.widget.DrawerLayout>