<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/drawerlayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Categories">

    <com.google.android.material.navigation.NavigationView
        android:id="@+id/navigation_view"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        android:layout_marginLeft="25dp"
        android:background="@color/white"
        android:theme="@style/navigationTheme"
        app:headerLayout="@layout/menu_header"
        app:menu="@menu/main_menu" />

    <RelativeLayout
        android:id="@+id/contentView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        android:orientation="vertical">

        <RelativeLayout
            android:id="@+id/top"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/content_bg"
            android:padding="15dp">

            <ImageView
                android:id="@+id/menu"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_centerVertical="true"
                android:contentDescription="TODO"
                android:src="@drawable/menu"
                app:tint="@color/black" />

            <ImageView
                android:layout_width="150dp"
                android:layout_height="30dp"
                android:layout_centerInParent="true"
                android:src="@drawable/logoname" />

            <ImageView
                android:id="@+id/Search"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:src="@drawable/ic_baseline_search_24"
                app:tint="@color/black" />
        </RelativeLayout>

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@id/top"
            android:scrollbars="none">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="10dp">

                <TextView
                    android:id="@+id/prodName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/bungee"
                    android:text="Product Name"
                    android:textColor="@color/black"
                    android:textSize="15sp" />

                <TextView
                    android:id="@+id/prodDetails"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="-7.5dp"
                    android:fontFamily="@font/baloo"
                    android:lineSpacingExtra="-7.5dp"
                    android:text="Product Details"
                    android:textSize="13.5sp" />

                <LinearLayout
                    android:id="@+id/Prices"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/prodRating"
                    android:layout_marginTop="-5dp"
                    android:orientation="horizontal">

                    <RelativeLayout
                        android:id="@+id/DiscountPrice"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingTop="10dp"
                        android:paddingRight="10dp"
                        android:paddingBottom="10dp">

                        <TextView
                            android:id="@+id/rupeesign1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/baloo"
                            android:text="\u20b9"
                            android:textColor="@color/black"
                            android:textSize="20sp" />

                        <TextView
                            android:id="@+id/discountPrice"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_toRightOf="@id/rupeesign1"
                            android:fontFamily="@font/baloo"
                            android:text="0"
                            android:textColor="@color/black"
                            android:textSize="20sp" />

                    </RelativeLayout>

                    <RelativeLayout
                        android:id="@+id/ProdPrice"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingTop="10dp"
                        android:paddingRight="10dp"
                        android:paddingBottom="10dp">

                        <TextView
                            android:id="@+id/rupeesign2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/baloo"
                            android:text="\u20b9"
                            android:textColor="@color/black"
                            android:textSize="20sp" />

                        <TextView
                            android:id="@+id/productPrice"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_toRightOf="@id/rupeesign2"
                            android:fontFamily="@font/baloo"
                            android:text="0"
                            android:textColor="@color/black"
                            android:textSize="20sp" />

                    </RelativeLayout>

                    <RelativeLayout
                        android:id="@+id/discountRl"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"

                        android:layout_gravity="center"
                        android:background="@drawable/discount_bg_2">

                        <TextView
                            android:id="@+id/discount"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:layout_marginLeft="5dp"
                            android:fontFamily="@font/baloo"
                            android:text="0%"
                            android:textColor="@color/white"
                            android:textSize="13sp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:layout_marginLeft="5dp"
                            android:layout_marginRight="5dp"
                            android:layout_toRightOf="@id/discount"
                            android:fontFamily="@font/baloo"
                            android:text="OFF"
                            android:textColor="@color/white"
                            android:textSize="13sp" />
                    </RelativeLayout>


                </LinearLayout>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="-10dp"
                    android:fontFamily="@font/baloo"
                    android:text="(Inclusive of all taxes)"
                    android:textSize="10sp" />

                <RatingBar
                    android:id="@+id/prodRating"
                    style="?android:attr/ratingBarStyleSmall"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/prodDescription"
                    android:isIndicator="true"
                    android:max="5"
                    android:stepSize=".5"
                    android:theme="@style/ratingBar" />

                <RelativeLayout
                    android:id="@+id/prodImgRl"
                    android:layout_width="match_parent"
                    android:layout_height="350dp"
                    android:layout_marginTop="10dp"
                    android:elevation="10dp">

                    <ImageView
                        android:id="@+id/share_btn"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:layout_alignParentRight="true"
                        android:layout_margin="10dp"
                        android:elevation="5dp"
                        android:src="@drawable/ic_baseline_share_24"
                        app:tint="@color/black" />

                    <RelativeLayout
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:layout_alignParentStart="true"
                        android:layout_margin="10dp"
                        android:elevation="5dp">

                        <ImageView
                            android:id="@+id/uncheck_fvrt"
                            android:layout_width="30dp"
                            android:layout_height="30dp"
                            android:layout_centerInParent="true"
                            android:src="@drawable/ic_baseline_favorite_border_24"
                            app:tint="@color/black" />

                        <ImageView
                            android:id="@+id/check_fvrt"
                            android:layout_width="30dp"
                            android:layout_height="30dp"
                            android:layout_centerInParent="true"
                            android:src="@drawable/ic_baseline_favorite_24"
                            android:visibility="gone"
                            app:tint="@color/orange" />
                    </RelativeLayout>

                    <ImageView
                        android:id="@+id/prodImage"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:src="@drawable/default_image" />

                    <RelativeLayout
                        android:id="@+id/outOfStockRl"
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:layout_centerVertical="true"
                        android:layout_margin="20dp"
                        android:background="@drawable/out_of_stock_bg"
                        android:visibility="gone">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerInParent="true"
                            android:fontFamily="@font/baloo"
                            android:text="out of stock"
                            android:textAllCaps="true"
                            android:textColor="@color/black"
                            android:textSize="15sp" />
                    </RelativeLayout>

                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/Prices">

                    <RelativeLayout
                        android:id="@+id/quantitylayout"
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:layout_centerVertical="true"
                        android:layout_margin="10dp"
                        android:background="@drawable/map_loc_bg"
                        android:backgroundTint="@color/orange"
                        android:elevation="2.5dp"
                        android:transitionName="search_bar"
                        android:visibility="gone">

                        <ImageView
                            android:id="@+id/plus"
                            android:layout_width="25dp"
                            android:layout_height="25dp"
                            android:layout_alignParentRight="true"
                            android:layout_centerVertical="true"
                            android:layout_marginRight="10dp"
                            android:src="@drawable/ic_baseline_add_24"
                            app:tint="@color/white" />

                        <TextView
                            android:id="@+id/quan"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerInParent="true"
                            android:fontFamily="@font/baloo"
                            android:text="1"
                            android:textColor="@color/white"
                            android:textSize="22.5sp" />

                        <ImageView
                            android:id="@+id/minu"
                            android:layout_width="22.5dp"
                            android:layout_height="25dp"
                            android:layout_alignParentLeft="true"
                            android:layout_centerVertical="true"
                            android:layout_marginLeft="10dp"
                            android:src="@drawable/ic_baseline_horizontal_rule_24"
                            app:tint="@color/white" />

                    </RelativeLayout>

                    <RelativeLayout
                        android:id="@+id/AddBtn"
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:layout_centerVertical="true"
                        android:layout_margin="10dp"
                        android:background="@drawable/map_loc_bg"
                        android:backgroundTint="@color/orange"
                        android:elevation="2.5dp"
                        android:transitionName="search_bar"
                        android:visibility="visible">

                        <RelativeLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerInParent="true">

                            <ImageView
                                android:id="@+id/icon"
                                android:layout_width="20dp"
                                android:layout_height="20dp"
                                android:layout_centerVertical="true"
                                android:layout_marginRight="10dp"
                                android:src="@drawable/basket"
                                app:tint="@color/white" />

                            <TextView
                                android:id="@+id/text"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_centerVertical="true"
                                android:layout_toRightOf="@id/icon"
                                android:fontFamily="@font/baloo"
                                android:text="Add to Cart"
                                android:textAllCaps="true"
                                android:textColor="@color/white"
                                android:textSize="17.5sp" />
                        </RelativeLayout>

                    </RelativeLayout>

                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/SecureTrans"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="-10dp"
                    android:paddingTop="10dp"
                    android:paddingRight="10dp"
                    android:paddingBottom="10dp">

                    <ImageView
                        android:id="@+id/icon2"
                        android:layout_width="20sp"
                        android:layout_height="20sp"
                        android:layout_centerVertical="true"
                        android:src="@drawable/secured" />

                    <TextView
                        android:id="@+id/SecureTransText"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="10dp"
                        android:layout_toRightOf="@id/icon2"
                        android:fontFamily="@font/baloo"
                        android:text="Secure transactions"
                        android:textSize="13.5sp" />

                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/Location"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="-10dp"
                    android:paddingTop="10dp"
                    android:paddingRight="10dp"
                    android:paddingBottom="10dp">

                    <ImageView
                        android:id="@+id/icon3"
                        android:layout_width="20sp"
                        android:layout_height="20sp"
                        android:layout_centerVertical="true"
                        android:src="@drawable/shpadd" />

                    <TextView
                        android:id="@+id/LocationText"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="10dp"
                        android:layout_toRightOf="@id/icon3"
                        android:fontFamily="@font/baloo"
                        android:text="Select a location to see nearby shops"
                        android:textSize="13.5sp" />

                </RelativeLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="2dp"
                    android:background="@color/light_grey" />

                <LinearLayout
                    android:id="@+id/TransContent"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="10dp"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:id="@+id/COD"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="10dp"
                        android:orientation="vertical">

                        <RelativeLayout
                            android:layout_width="60dp"
                            android:layout_height="60dp"
                            android:background="@drawable/favourite_bg_3"
                            android:backgroundTint="@color/light_grey"
                            android:elevation="5dp">

                            <ImageView
                                android:layout_width="45dp"
                                android:layout_height="45dp"
                                android:layout_centerInParent="true"
                                android:src="@drawable/cod" />

                        </RelativeLayout>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_horizontal"
                            android:layout_marginTop="5dp"
                            android:fontFamily="@font/baloo"
                            android:gravity="center_horizontal"
                            android:text="Pay on\nDelivery"
                            android:textAlignment="center"
                            android:textColor="@color/black"
                            android:textSize="12.5sp" />
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/Jee"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="10dp"
                        android:orientation="vertical">

                        <RelativeLayout
                            android:layout_width="60dp"
                            android:layout_height="60dp"
                            android:background="@drawable/favourite_bg_3"
                            android:backgroundTint="@color/light_grey"
                            android:elevation="5dp">

                            <ImageView
                                android:layout_width="45dp"
                                android:layout_height="45dp"
                                android:layout_centerInParent="true"
                                android:src="@drawable/ret" />

                            <ImageView
                                android:layout_width="45dp"
                                android:layout_height="45dp"
                                android:layout_centerInParent="true"
                                android:src="@drawable/restrict" />

                        </RelativeLayout>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_horizontal"
                            android:layout_marginTop="5dp"
                            android:fontFamily="@font/baloo"
                            android:gravity="center_horizontal"
                            android:text="Non\nReturnable"
                            android:textAlignment="center"
                            android:textColor="@color/black"
                            android:textSize="12.5sp" />
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/cs"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="10dp"
                        android:orientation="vertical">

                        <RelativeLayout
                            android:layout_width="60dp"
                            android:layout_height="60dp"
                            android:layout_gravity="center"
                            android:background="@drawable/favourite_bg_3"
                            android:backgroundTint="@color/light_grey"
                            android:elevation="5dp">

                            <ImageView
                                android:layout_width="45dp"
                                android:layout_height="45dp"
                                android:layout_centerInParent="true"
                                android:src="@drawable/delivery" />

                        </RelativeLayout>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_horizontal"
                            android:layout_marginTop="5dp"
                            android:fontFamily="@font/baloo"
                            android:gravity="center_horizontal"
                            android:text="Safe\nDelivery"
                            android:textAlignment="center"
                            android:textColor="@color/black"
                            android:textSize="12.5sp" />
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/it"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="10dp"
                        android:orientation="vertical">

                        <RelativeLayout
                            android:layout_width="60dp"
                            android:layout_height="60dp"
                            android:layout_gravity="center"
                            android:background="@drawable/favourite_bg_3"
                            android:backgroundTint="@color/light_grey"
                            android:elevation="5dp">

                            <ImageView
                                android:layout_width="45dp"
                                android:layout_height="45dp"
                                android:layout_centerInParent="true"
                                android:src="@drawable/secure" />

                        </RelativeLayout>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_horizontal"
                            android:layout_marginTop="5dp"
                            android:fontFamily="@font/baloo"
                            android:gravity="center_horizontal"
                            android:text="No Contact\nDelivery"
                            android:textAlignment="center"
                            android:textColor="@color/black"
                            android:textSize="12.5sp" />
                    </LinearLayout>

                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="2dp"
                    android:layout_marginTop="10dp"
                    android:background="@color/light_grey" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/feature_tag"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/bungee"
                        android:text="Features \u0026 Details"
                        android:textColor="@color/black"
                        android:textSize="15sp" />

                    <TextView
                        android:id="@+id/prodDetailsDetailed"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="-7.5dp"
                        android:fontFamily="@font/baloo"
                        android:lineSpacingExtra="-2.5dp"
                        android:text="Product details not found."
                        android:textSize="13.5sp" />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="2dp"
                        android:layout_marginTop="10dp"
                        android:background="@color/light_grey" />

                    <TextView
                        android:id="@+id/quantity_tag"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/bungee"
                        android:text="Quantity"
                        android:textColor="@color/black"
                        android:textSize="15sp" />

                    <TextView
                        android:id="@+id/prodQuanity"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="-7.5dp"
                        android:fontFamily="@font/baloo"
                        android:lineSpacingExtra="-7.5dp"
                        android:text="0g"
                        android:textSize="13.5sp" />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="2dp"
                        android:layout_marginTop="10dp"
                        android:background="@color/light_grey" />

                    <TextView
                        android:id="@+id/review_tag"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/bungee"
                        android:text="Ratings \u0026 Reviews"
                        android:textColor="@color/black"
                        android:textSize="15sp" />

                    <RelativeLayout
                        android:id="@+id/Rating"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="-7.5dp">

                        <TextView
                            android:id="@+id/prodRatingVal"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:layout_marginRight="5dp"
                            android:fontFamily="@font/baloo"
                            android:text="0"
                            android:textColor="@color/orange"
                            android:textSize="35sp" />

                        <ImageView
                            android:layout_width="20sp"
                            android:layout_height="20sp"
                            android:layout_centerVertical="true"
                            android:layout_toRightOf="@id/prodRatingVal"
                            android:src="@drawable/ic_baseline_stars_24"
                            app:tint="@color/orange" />

                    </RelativeLayout>

                    <RelativeLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="-10dp">

                        <TextView
                            android:id="@+id/NoOfReviews"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:layout_marginRight="5dp"
                            android:fontFamily="@font/baloo"
                            android:text="0"
                            android:textSize="15sp" />

                        <TextView
                            android:id="@+id/text2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:layout_toRightOf="@id/NoOfReviews"
                            android:fontFamily="@font/baloo"
                            android:text="global ratings"
                            android:textSize="13.5sp" />
                    </RelativeLayout>

                    <RelativeLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">

                        <RelativeLayout
                            android:id="@+id/Be_The_First_To_ReviewBtn"
                            android:layout_width="match_parent"
                            android:layout_height="40dp"
                            android:layout_centerVertical="true"
                            android:layout_margin="10dp"
                            android:background="@drawable/choose_cur_loc_bg"
                            android:transitionName="search_bar"
                            android:visibility="visible">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_centerInParent="true"
                                android:fontFamily="@font/baloo"
                                android:text="Be The First To Add Review"
                                android:textAllCaps="true"
                                android:textColor="@color/black"
                                android:textSize="17.5sp" />
                        </RelativeLayout>

                        <RelativeLayout
                            android:id="@+id/Write_ReviewBtn"
                            android:layout_width="match_parent"
                            android:layout_height="40dp"
                            android:layout_centerVertical="true"
                            android:layout_margin="10dp"
                            android:background="@drawable/choose_cur_loc_bg"
                            android:transitionName="search_bar"
                            android:visibility="gone">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_centerInParent="true"
                                android:fontFamily="@font/baloo"
                                android:text="Write Review"
                                android:textAllCaps="true"
                                android:textColor="@color/black"
                                android:textSize="17.5sp" />
                        </RelativeLayout>
                    </RelativeLayout>

                    <LinearLayout
                        android:id="@+id/add_reviewRL"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:visibility="visible">

                        <RelativeLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center">

                            <TextView
                                android:id="@+id/applicable"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_centerInParent="true"
                                android:fontFamily="@font/baloo"
                                android:text="How was your experience with this product ?\nYour feedback is important to improve our quality of services."
                                android:textAlignment="center"
                                android:textAllCaps="true"
                                android:textColor="@color/black"
                                android:textSize="10sp"
                                android:layout_marginTop="10dp"
                                android:visibility="gone" />

                            <TextView
                                android:id="@+id/not_applicable"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_centerInParent="true"
                                android:fontFamily="@font/baloo"
                                android:text="You will be eligible to review this product\nonce you purchase it."
                                android:textAlignment="center"
                                android:textAllCaps="true"
                                android:textColor="@color/black"
                                android:textSize="10sp"
                                android:visibility="gone" />
                        </RelativeLayout>

                        <RatingBar
                            android:id="@+id/revRating"
                            style="?android:attr/ratingBarStyleIndicator"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_marginTop="5dp"
                            android:isIndicator="false"
                            android:max="5"
                            android:stepSize=".5"
                            android:theme="@style/ratingBar"
                            android:visibility="gone" />

                        <com.google.android.material.textfield.TextInputLayout
                            android:id="@+id/prodrev"
                            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="20dp"
                            android:layout_marginTop="10dp"
                            android:layout_marginRight="20dp"
                            android:theme="@style/editTextTheme"
                            android:visibility="gone"
                            app:boxStrokeColor="@color/black"
                            app:boxStrokeWidth="2.5dp"
                            app:endIconMode="clear_text"
                            app:endIconTint="@color/black">


                            <com.google.android.material.textfield.TextInputEditText
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_centerInParent="true"
                                android:background="@null"
                                android:fontFamily="@font/baloo"
                                android:gravity="top"
                                android:hint="What do you think about this product?"
                                android:inputType="textMultiLine|textCapSentences"
                                android:lines="5"
                                android:maxLines="5"
                                android:paddingLeft="20dp"
                                android:scrollbars="none"
                                android:textColor="@color/black" />


                        </com.google.android.material.textfield.TextInputLayout>

                        <RelativeLayout
                            android:id="@+id/AddReview"
                            android:layout_width="50dp"
                            android:layout_height="50dp"
                            android:layout_gravity="right"
                            android:layout_marginTop="5dp"
                            android:layout_marginRight="20dp"
                            android:background="@drawable/favourite_bg_3"
                            android:elevation="5dp"
                            android:visibility="gone">

                            <ImageView
                                android:layout_width="40dp"
                                android:layout_height="40dp"
                                android:layout_centerInParent="true"
                                android:src="@drawable/ic_baseline_add_24"
                                app:tint="@color/white" />
                        </RelativeLayout>

                        <LinearLayout
                            android:id="@+id/ReviewRL"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:visibility="gone">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/bungee"
                                android:text="User Reviews"
                                android:textSize="15sp"
                                android:textColor="@color/black" />

                            <androidx.recyclerview.widget.RecyclerView
                                android:id="@+id/reviewRV"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_marginTop="-7.5dp"
                                android:orientation="vertical"
                                app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                                tools:listitem="@layout/review_layout"/>
                        </LinearLayout>


                    </LinearLayout>

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="15dp">

                        <TextView
                            android:id="@+id/cat_name1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/baloo"
                            android:text="Similar Products"
                            android:textColor="@color/black"
                            android:textSize="15sp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@id/cat_name1"
                            android:fontFamily="@font/asap"
                            android:text="Some products similar to above products"
                            android:textColor="@color/black"
                            android:textSize="10sp" />


                    </RelativeLayout>

                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/trendingRV"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginTop="15dp"
                        android:layout_marginBottom="60dp"
                        android:orientation="horizontal"
                        app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                        tools:listitem="@layout/product_layout_user">

                    </androidx.recyclerview.widget.RecyclerView>

                    <View
                        android:id="@+id/cartInfoView"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="60dp"
                        android:visibility="gone"/>
                </LinearLayout>

            </LinearLayout>
        </ScrollView>

        <RelativeLayout
            android:id="@+id/cart_barRl"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_above="@id/bottom_nav"
            android:layout_margin="20dp"
            android:background="@drawable/discount_bg_2"
            android:elevation="5dp"
            android:visibility="gone">

            <ImageView
                android:id="@+id/basket_img"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_centerVertical="true"
                android:layout_marginLeft="15dp"
                android:src="@drawable/basket"
                app:tint="@color/white" />

            <TextView
                android:id="@+id/quantity_txt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="10dp"
                android:layout_toRightOf="@id/basket_img"
                android:fontFamily="@font/baloo"
                android:text="1 item"
                android:textColor="@color/white" />

            <TextView
                android:id="@+id/bar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="10dp"
                android:layout_toRightOf="@id/quantity_txt"
                android:fontFamily="@font/baloo"
                android:text="|"
                android:textColor="@color/white" />

            <TextView
                android:id="@+id/price_txt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="10dp"
                android:layout_toRightOf="@id/bar"
                android:fontFamily="@font/baloo"
                android:text="\u20b9 0"
                android:textColor="@color/white" />

            <TextView
                android:id="@+id/orgprice_txt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="10dp"
                android:layout_toRightOf="@id/price_txt"
                android:fontFamily="@font/baloo"
                android:text="\u20b9 0"
                android:textColor="@color/white"
                android:visibility="gone" />

            <TextView
                android:id="@+id/viewCart"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="15dp"
                android:drawableEnd="@drawable/ic_baseline_navigate_next_24"
                android:drawablePadding="5dp"
                android:drawableTint="@color/white"
                android:fontFamily="@font/baloo"
                android:text="view cart"
                android:textColor="@color/white" />

        </RelativeLayout>

        <com.google.android.material.bottomnavigation.BottomNavigationView
            android:id="@+id/bottom_nav"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:background="?android:attr/windowBackground"
            android:theme="@style/navigationTheme"
            app:labelVisibilityMode="unlabeled"
            app:layout_behavior="@string/hide_bottom_view_on_scroll_behavior"
            app:menu="@menu/bottom_nav_menu" />

    </RelativeLayout>

</androidx.drawerlayout.widget.DrawerLayout>